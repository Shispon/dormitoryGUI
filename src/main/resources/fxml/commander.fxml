<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.layout.AnchorPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.CommandantController">
    <top>
        <ToolBar>
            <Label text="Добро пожаловать, Коммендант!" />
            <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
            <Button text="Настройки" onAction="#openSettings"/>
            <Button text="Выйти" onAction="#logout"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER">
            <ComboBox fx:id="actionComboBox" onAction="#onActionSelected">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Создать нового пользователя"/>
                        <String fx:value="Найти пользователя"/>
                        <String fx:value="Список присутствующих/отсутствующих"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <AnchorPane fx:id="actionPane"/>
        </VBox>
    </center>
</BorderPane>
