<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="301.0" prefWidth="383.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.diplom.dormitory.controller.LoginController">
   <children>
      <VBox alignment="CENTER" layoutX="89.0" layoutY="45.0" prefHeight="212.0" prefWidth="217.0">
         <children>
            <TextField fx:id="mailField"  promptText="Введите номер телефона или почту" />
            <PasswordField fx:id="passwordField" promptText="Введите пароль" />
            <Button  alignment="CENTER" mnemonicParsing="false" snapToPixel="false" text="Вход" onAction="#onLogin"/>
            <Label fx:id="errorLabel" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <cursor>
            <Cursor fx:constant="OPEN_HAND" />
         </cursor>
      </VBox>
   </children>
</AnchorPane>
